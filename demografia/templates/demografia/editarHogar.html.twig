{% extends "base.html.twig" %}

{% block migas %}
    <ol class="breadcrumb">
      <li><a href="{% url "demografia:index" %}">Inicio</a></li>
      <li><a href="{% url "demografia:comunidad" %}">Comunidad</a></li>
      <li><a href="{% url "demografia:zona" %}">Zona</a></li>
      <li><a href="{% url "demografia:vivienda" vivienda %}">Vivienda</a></li>
      <li class="active">Editar Familia</li>
    </ol>
{% endblock %}

{% block contenido %}
	<div class="col-md-6" style="float: none; margin: 0 auto;">
		<div class="panel panel-primary">
			<div class="panel-heading"><h3 class="panel-title center-block">Editar datos de familia</h3></div>
			<div class="panel-body"><!--contenido>-->
				<form role="form" class="form-horizontal" action="#" method="post">
			    	{% csrf_token %}
					{% for field in form %}
						{% if field.id_for_label != "id_viviendahogar" %}
							<div class="form-group margin-bottom {% if field.errors %} has-error {% endif %}">
								<div class="col-xs-4"><label for="{{ field.id_for_label }}" class="control-label">{{ field.label }}</label></div>
					    			<div class="col-xs-8">{{ field }}</div>
								{% for error in field.errors %}
									<span class="help-block">{{ error }}</span>
								{% endfor %}
							</div>
						{% else %}
							<input name="viviendahogar" id="id_viviendahogar" value="{{ field.value }}" type="hidden">
						{% endif %}
					{% endfor %}
			    	<button type="submit" class="btn btn-primary btn center-block">&nbsp;<span class="glyphicon glyphicon-floppy-save"></span>&nbsp;Guardar Cambios</button>
				</form>
			</div><!--/contenido>-->
		</div>
	</div>
{% endblock %}