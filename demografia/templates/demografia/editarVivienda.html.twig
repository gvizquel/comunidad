{% extends "base.html.twig" %}

{% block migas %}
    <ol class="breadcrumb">
      <li><a href="{% url "demografia:index" %}">Inicio</a></li>
      <li><a href="{% url "demografia:comunidad" %}">Comunidad</a></li>
      <li><a href="{% url "demografia:zona" %}">Zona</a></li>
      <li class="active">{{ active }}</li>
    </ol>
{% endblock %}

{% block contenido %}
	<div style="float: none; margin: 0 auto;">
		<div class="panel panel-primary">
			<div class="panel-heading"><h3 class="panel-title center-block">{{ active }}</h3></div>
			<div class="panel-body">
				<div class="row">
					<form role="form" action="#" method="post">
				    	{% csrf_token %}
				    	{% if form.errors %}
							<div class="row col-lg-12 col-md-12 center-block alert alert-danger alert-dismissable">
							  <button type="button" class="close" data-dismiss="alert">&times;</button>
							  <strong>Â¡Hay errores en el formulario!</strong> Por favor corrijalos e intente guardar los cambios nuevamente.
							</div>
						{% endif %}
				    	<div class="form-group">
		                	<label for="{{ form.tipovivienda.id_for_label }}" class="control-label col-lg-2 col-md-2 margin-bottom">{{ form.tipovivienda.label }}</label>
		                	<div class="col-lg-4 col-md-4 margin-bottom {% if form.tipovivienda.errors %} has-error {% endif %}">
		                		{{ form.tipovivienda }}
		                		<span class="help-block">{{ form.tipovivienda.errors }}</span>
		                	</div>
		                	<label class="control-label col-lg-2 col-md-2 margin-bottom {% if form.nombrevivienda.errors %} has-error {% endif %}">{{ form.nombrevivienda.label }}</label>
		                	<div class="col-lg-4 col-md-4 margin-bottom {% if form.nombrevivienda.errors %} has-error {% endif %}">
		                		{{ form.nombrevivienda }}
		                		<span class="help-block">{{ form.nombrevivienda.errors }}</span>
		                	</div>
		              	</div>
				    	<div class="form-group">
		                	<label class="control-label col-lg-2 col-md-2 margin-bottom">{{ form.piso.label }}</label>
		                	<div class="col-lg-4 col-md-4 margin-bottom {% if form.piso.errors %} has-error {% endif %}">
		                		{{ form.piso }}
		                		<span class="help-block">{{ form.piso.errors }}</span>
		                	</div>
		                	<label class="control-label col-lg-2 col-md-2 margin-bottom">{{ form.apartamento.label }}</label>
		                	<div class="col-lg-4 col-md-4 margin-bottom {% if form.apartamento.errors %} has-error {% endif %}">
		                		{{ form.apartamento }}
		                		<span class="help-block">{{ form.apartamento.errors }}</span>
		                	</div>
		              	</div>
				    	<div class="form-group">
		                	<label class="control-label col-lg-2 col-md-2 margin-bottom">{{ form.tipovia.label }}</label>
		                	<div class="col-lg-4 col-md-4 margin-bottom {% if form.tipovia.errors %} has-error {% endif %}">
		                		{{ form.tipovia }}
		                		<span class="help-block">{{ form.tipovia.errors }}</span>
		                	</div>
		                	<label class="control-label col-lg-2 col-md-2 margin-bottom">{{ form.nombrevia.label }}</label>
		                	<div class="col-lg-4 col-md-4 margin-bottom {% if form.nombrevia.errors %} has-error {% endif %}">
		                		{{ form.nombrevia }}
		                		<span class="help-block">{{ form.nombrevia.errors }}</span>
		                	</div>
		              	</div>
				    	<div class="form-group">
		                	<label class="control-label col-lg-2 col-md-2 margin-bottom">{{ form.tipolocalidad.label }}</label>
		                	<div class="col-lg-4 col-md-4 margin-bottom {% if form.tipolocalidad.errors %} has-error {% endif %}">
		                		{{ form.tipolocalidad }}
		                		<span class="help-block">{{ form.tipolocalidad.errors }}</span>
		                	</div>
		                	<label class="control-label col-lg-2 col-md-2 margin-bottom">{{ form.nombrelocalidad.label }}</label>
		                	<div class="col-lg-4 col-md-4 margin-bottom {% if form.nombrelocalidad.errors %} has-error {% endif %}">
		                		{{ form.nombrelocalidad }}
		                		<span class="help-block">{{ form.nombrelocalidad.errors }}</span>
		                	</div>
		              	</div>
				    	<div class="form-group">
		                	<label class="control-label col-lg-2 col-md-2 margin-bottom">{{ form.condicionfisica.label }}</label>
		                	<div class="col-lg-4 col-md-4 margin-bottom {% if form.condicionfisica.errors %} has-error {% endif %}">
		                		{{ form.condicionfisica }}
		                		<span class="help-block">{{ form.condicionfisica.errors }}</span>
		                	</div>
		                	<label class="control-label col-lg-2 col-md-2 margin-bottom">{{ form.metroscuadrados.label }}</label>
		                	<div class="col-lg-4 col-md-4 margin-bottom {% if form.metroscuadrados.errors %} has-error {% endif %}">
		                		{{ form.metroscuadrados }}
		                		<span class="help-block">{{ form.metroscuadrados.errors }}</span>
		                	</div>
		              	</div>
				    	<div class="form-group">
		                	<label class="control-label col-lg-2 col-md-2 margin-bottom">{{ form.numerohabitaciones.label }}</label>
		                	<div class="col-lg-4 col-md-4 margin-bottom {% if form.numerohabitaciones.errors %} has-error {% endif %}">
		                		{{ form.numerohabitaciones }}
		                		<span class="help-block">{{ form.numerohabitaciones.errors }}</span>
		                	</div>
		                	<label class="control-label col-lg-2 col-md-2 margin-bottom">{{ form.numerobanos.label }}</label>
		                	<div class="col-lg-4 col-md-4 margin-bottom {% if form.numerobanos.errors %} has-error {% endif %}">
		                		{{ form.numerobanos }}
		                		<span class="help-block">{{ form.numerobanos.errors }}</span>
		                	</div>
		              	</div>
                		<input id="id_zona" name="zona" type="hidden" value="{{ idZona }}"/>
                		<input type="hidden" name="return_url" value="{{ request.META.HTTP_REFERER }}" />
			            <div class="form-group">
			              <div class="col-xs-12">
				            	<button type="submit" class="btn btn-primary btn center-block">&nbsp;<span class="glyphicon glyphicon-floppy-save"></span>&nbsp;Guardar Cambios</button>
				            </div>
			            </div>
					</form>
				</div>
			</div><!--/contenido>-->
		</div>
	</div>
{% endblock %}